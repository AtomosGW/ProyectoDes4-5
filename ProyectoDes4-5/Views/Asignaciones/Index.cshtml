@model IEnumerable<ProyectoDes4_5.Models.Asignaciones>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asignaciones</title>
    <script src="~/WEB/script/script.js"></script>
    <link rel="stylesheet" href="~/WEB/estilo/estilo.css">
</head>
<body>
    <div class="container">
        <h1>Asignaciones</h1>

        <!-- Botón para crear una nueva asignación -->
        <a href="@Url.Action("Create", "Asignaciones")">
            <button class="btn btn-primary">Crear Nueva Asignación</button>
        </a>


        <!-- Verificar si el modelo es null o está vacío -->
        @if (Model != null && Model.Any())
        {
            <table id="asignacionesTable" class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ticket ID</th>
                        <th>Operator ID</th>
                        <th>Asignado En</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var asignacion in Model)
                    {
                        <tr>
                            <td>@asignacion.Id</td>
                            <td>@asignacion.PedidoId</td>
                            <td>@asignacion.EmpleadoId</td>
                            <td>
                                @if (asignacion.Pedido != null)
                                {
                                    <span>@asignacion.Pedido.Fecha</span>
                                }
                                else
                                {
                                    <span>No disponible</span>
                                }
                            </td>
                            <td>
                                <button onclick="editAsignacion(@asignacion.Id)">Editar</button>
                                <button onclick="deleteAsignacion(@asignacion.Id)">Eliminar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No hay asignaciones disponibles.</p>
        }
    </div>
</body>
</html>
